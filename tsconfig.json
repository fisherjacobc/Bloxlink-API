{
	"compileOnSave": true,
	"compilerOptions": {
		"alwaysStrict": true,
		"lib": [
			"esnext"
		],
		"module": "commonjs",
		"noUnusedParameters": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"noUnusedLocals": true,
		"removeComments": false,
		"target": "ES2020",
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"noEmit": true
	},
	"include": [
		"src/global/index.ts",
		"src/guild/index.ts"
	]
}